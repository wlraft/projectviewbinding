<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/iv_register"
        android:layout_width="228dp"
        android:layout_height="228dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/himti"/>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silahkan Daftar"
        android:textSize="20sp"
        android:layout_marginTop="256dp"
        android:layout_marginStart="20dp"/>


    <EditText
        android:id="@+id/et_regemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="48dp"
        android:layout_below="@id/tv_register"
        android:hint="email"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/et_regpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="48dp"
        android:layout_below="@id/et_regemail"
        android:hint="password"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/tv_punya_akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sudah Punya Akun?"
        android:textSize="15sp"
        android:layout_alignEnd="@id/et_regpassword"
        android:layout_below="@id/et_regpassword"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_below="@id/tv_punya_akun"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="40dp"/>





</RelativeLayout>